{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "outDir": "temp",
    "sourceMap": true,
    "baseUrl": "./node_modules",
    "paths": {
      "@synergetic/core": ["../src/components/index.ts"]
    }
  },
  "include": [
    "/src/components/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
